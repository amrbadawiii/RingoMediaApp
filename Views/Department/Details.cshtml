@model DepartmentDetailsViewModel

<h1>Department Details</h1>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Department Name
        </dt>
        <dd class="col-sm-10">
            @Model.Department.DepartmentName
        </dd>
        <dt class="col-sm-2">
            Department Logo
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Department.DepartmentLogo))
            {
                <img src="~/@Model.Department.DepartmentLogo" alt="Department Logo" style="width: 100px; height: 100px;" />
            }
            else
            {
                <span>No logo</span>
            }
        </dd>
        <dt class="col-sm-2">
            Parent Department
        </dt>
        <dd class="col-sm-10">
            @Model.Department.ParentId
        </dd>
    </dl>
</div>

<h2>Sub-Departments</h2>

<table class="table">
    <thead>
        <tr>
            <th>Department Name</th>
            <th>Logo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subDepartment in Model.SubDepartments)
        {
            <tr>
                <td>@subDepartment.DepartmentName</td>
                <td>
                    @if (!string.IsNullOrEmpty(subDepartment.DepartmentLogo))
                    {
                        <img src="~/@subDepartment.DepartmentLogo" alt="Department Logo" style="width: 100px; height: 100px;" />
                    }
                    else
                    {
                        <span>No logo</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Department.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

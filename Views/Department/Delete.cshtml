@model DepartmentModel

<h1>Delete Department</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Department Name
        </dt>
        <dd class="col-sm-10">
            @Model.DepartmentName
        </dd>
        <dt class="col-sm-2">
            Department Logo
        </dt>
        <dd class="col-sm-10">
            <img src="~/@Model.DepartmentLogo" alt="Department Logo" style="width: 100px; height: 100px;" />
        </dd>
        <dt class="col-sm-2">
            Parent Department
        </dt>
        <dd class="col-sm-10">
            @Model.ParentDepartment?.DepartmentName
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input asp-action="DeleteConfirmed" type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

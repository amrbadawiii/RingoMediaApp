@model IEnumerable<DepartmentModel>

<h1>Departments</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Department Name</th>
            <th>Department Logo</th>
            <th>Parent Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DepartmentName)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.DepartmentLogo))
                    {
                        <img src="@item.DepartmentLogo" alt="Logo" width="50" height="50" />
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.ParentDepartment.DepartmentName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

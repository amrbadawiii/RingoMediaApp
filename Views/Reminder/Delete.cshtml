@model ReminderModel

<h1>Delete Reminder</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Reminder</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Date-Time
        </dt>
        <dd class="col-sm-10">
            @Model.DateTime
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input asp-action="DeleteConfirmed" type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
